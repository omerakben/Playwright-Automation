# Environment
NODE_ENV=development

# Application
BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api
DEFAULT_TIMEOUT=30000
DEFAULT_RETRIES=2

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_db
DB_USER=test_user
DB_PASSWORD=test_password

# MSSQL Database
MSSQL_SERVER=localhost
MSSQL_DATABASE=test_db
MSSQL_USER=sa
MSSQL_PASSWORD=YourStrong@Password
MSSQL_PORT=1433
MSSQL_POOL_MAX=10
MSSQL_POOL_MIN=0
MSSQL_POOL_IDLE_TIMEOUT=30000

# Authentication
AUTH_USERNAME=test_user
AUTH_PASSWORD=test_pass
API_KEY=your_api_key_here

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=logs/test-automation.log

# Test Configuration
HEADLESS=true
BROWSER=chromium
SCREENSHOT_ON_FAILURE=true
VIDEO_RECORDING=false

# API Testing
API_TIMEOUT=5000
API_RETRY_ATTEMPTS=3

# Performance Testing
PERFORMANCE_VUS=10
PERFORMANCE_DURATION=30s

# Security Testing
ZAP_API_KEY=your_zap_api_key
ZAP_PROXY_URL=http://localhost:8080
