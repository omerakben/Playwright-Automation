{
  "name": "enterprise-playwright-framework",
  "version": "0.1.0",
  "description": "Enterprise-Grade Playwright Automation Framework",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:e2e": "playwright test tests/e2e/",
    "test:api": "playwright test tests/api/",
    "test:perf": "playwright test tests/performance/",
    "test:security": "playwright test tests/security/",
    "test:a11y": "playwright test tests/accessibility/",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:headed": "playwright test --headed",
    "test:parallel": "playwright test --workers=4",
    "test:report": "playwright show-report",
    "test:allure": "allure generate ./allure-results --clean",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset",
    "db:generate": "prisma generate",
    "docker:build": "docker build -t playwright-framework .",
    "docker:test": "docker run playwright-framework npm test",
    "ci:test": "npm run test -- --reporter=list,allure-playwright",
    "ci:report": "npm run test:allure && allure serve"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "e2e",
    "api",
    "performance",
    "security",
    "accessibility",
    "enterprise"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@prisma/client": "^5.22.0",
    "@types/joi": "^17.2.2",
    "@types/mssql": "^9.1.5",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "allure-playwright": "^2.12.0",
    "axios": "^1.6.7",
    "dotenv": "^16.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "k6": "^0.0.0",
    "prettier": "^3.2.5",
    "prisma": "^5.22.0",
    "typescript": "^5.3.3",
    "winston": "^3.17.0"
  },
  "dependencies": {
    "@faker-js/faker": "^9.5.0",
    "allure-js-commons": "^2.9.2",
    "joi": "^17.13.3",
    "mssql": "^11.0.1",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
